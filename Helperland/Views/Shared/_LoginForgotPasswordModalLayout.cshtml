<!-- Modal 5 Login -->
<div class="modal fade" id="loginModal" aria-hidden="true" aria-labelledby="loginModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div class="mdlheader">Login to your Account</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row m-2">
                    <div class="col-md-12">
                        <input type="email" id="loginmodal_email" onkeyup="checkForLoginModal();" class="form-control img-modal-icon img-email" autocomplete="off" placeholder="Email">
                    </div>
                </div>
                <div class="row m-2">
                    <div class="col-md-12">
                        <input type="password" id="loginmodal_password" onkeyup="checkForLoginModal();" class="form-control img-modal-icon img-password" autocomplete="off" placeholder="Password">
                    </div>
                </div>
                <div class="row m-2 my-3">
                    <div class="col-md-12">
                        <input class="form-check-input" type="checkbox" value="" id="">
                        <label class="form-check-label" for="">
                            Remember me
                        </label>
                    </div>
                </div>
                <div class="row m-2">
                    <div class="col-md-12">
                        <button id="btnloginmodal">Login</button>
                    </div>
                </div>
                <div class="d-flex justify-content-center align-items-center"><a asp-action="" asp-controller="" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#forgorpasswordModal" role="button">Forgot password?</a></div>
                <div class="d-flex justify-content-center align-items-center mb-4">Don't have an account?&nbsp;<a asp-action="customersignup" asp-controller="Customer">Create an Account</a></div>
            </div>
        </div>
    </div>
</div>
<!-- Modal 5 Forgot Password -->
<div class="modal fade" id="forgorpasswordModal" aria-hidden="true" aria-labelledby="forgorpasswordModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div class="mdlheader">Forgot password</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row m-2">
                    <div class="col-md-12">
                        <input type="email" id="passwordmodal_email" autocomplete="off" onkeyup="checkForPasswordModal();" class="form-control img-modal-icon img-email" placeholder="Email Address">
                    </div>
                </div>
                <div class="row m-2">
                    <div class="col-md-12">
                        <button id="btnpasswordmodal">Send</button>
                    </div>
                </div>
                <div class="d-flex justify-content-center align-items-center mt-4"><a asp-action="" asp-controller="" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#loginModal" role="button">Login Now</a></div>
            </div>
        </div>
    </div>
</div>