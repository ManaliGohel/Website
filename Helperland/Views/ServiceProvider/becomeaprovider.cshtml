@model SignupViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Become a Provider | Helperland</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="Helperland, Service Provider, Become a Provider, HTML, CSS, JavaScript, Bootstrap">
    <link rel="icon" type="image/x-icon" href="~/images/logo/favicon_img.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/home.css">
    <link rel="stylesheet" href="~/css/mycss2.css">
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <style>
        /* For hide arrows of Number Input type */
        /* Chrome, Safari, Edge, Opera */
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
        /* Firefox */
        input[type=number] {
            -moz-appearance: textfield;
        }
    </style>
</head>
<body onscroll="stickyNavbar();" onresize="setLogoByWinSize();" onload="checkForLoginModal(); checkForPasswordModal();">
    <section class="becomepro-back pb-5">
        <header>
            <nav class="navbar navbar-expand-lg p-2 pt-3" id="navbar">
                <a asp-action="home" asp-controller="customer">
                    <img src="~/images/Home/white-logo-transparent-background.png" alt="logo" id="navlogo">
                </a>
                <button type="button" class="navbar-toggler" id="navmain" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto navOption">
                        @{
                            if (Context.Session.GetInt32("UserType") != null)
                            {
                                <a asp-action="bookservice" asp-controller="customer" class="navOptionOutline ot1" id="btnBookCleaner">Book a Cleaner</a>
                            }
                            else
                            {
                                <a href="#" onclick="openLoginModalforBS();" class="navOptionOutline ot1" id="btnBookCleaner">Book a Cleaner</a>
                            }
                        }                        
                        <a asp-action="prices" asp-controller="customer" class="navOptionOutline">Prices</a>
                        <a asp-action="" asp-controller="" class="navOptionOutline">Our Guarantee</a>
                        <a asp-action="" asp-controller="" class="navOptionOutline">Blog</a>
                        <a asp-action="contactus" asp-controller="customer" class="navOptionOutline">Contact us</a>
                        <a asp-action="" asp-controller="" class="navOptionOutline ot1" id="btnLogin" data-bs-toggle="modal" data-bs-target="#loginModal" role="button">Login</a>
                        <a asp-action="becomeaprovider" asp-controller="ServiceProvider" class="navOptionOutline ot1" id="btnBecomeHelper">Become a Helper</a>
                        <div id="navcountry">
                            <a id="ddCountry" class="p-0 m-0" role="button" data-bs-toggle="dropdown" aria-expanded="false"><div id="ddCountryImgContainer"><img src="~/images/Home/india.jpg" class="ps-4 pe-2 pt-2"><div class="dv-downarr"><img class="img-pro-downarr" src="~/images/upcoming-service/down-arrow.png"></div></div></a>
                            <ul class="dropdown-menu ms-2 mt-2" aria-labelledby="ddCountry" style="width: 5%; right: 10px; left: auto;">
                                <li class="liddCountry p-0 m-0"><a class="dropdown-item" asp-action="" asp-controller=""><img src="~/images/Home/canada.jpg" alt="canada"></a></li>
                                <li class="liddCountry p-0 m-0"><a class="dropdown-item" asp-action="" asp-controller=""><img src="~/images/Home/us.jpg" alt="us"></a></li>
                                <li class="liddCountry p-0 m-0"><a class="dropdown-item" asp-action="" asp-controller=""><img src="~/images/Home/uk.png" alt="uk"></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="background_disable_effect"></div>
            </nav>
        </header>
        <div class="container-regpro">
            <div class="row" style="width: 100%;">
                <div class="col-md-4 regpro_slide1">
                    <div class="feellikehw">
                        <p>Do not feel like housework?</p>
                        <ul>
                            <li>&#10004; open time-management</li>
                            <li>&#10004; only accept suitable requests</li>
                            <li>&#10004; fair and fixed hourly wage</li>
                            <li>&#10004; ideal part time job</li>
                            <li>&#10004; personal contact person</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-8 regpro_slide2">
                    <div class="dv-regpro p-4 mx-4">
                        <div class="title ff mb-4">Register Now!</div>
                        <form id="frmRegProvider" method="post" asp-controller="ServiceProvider" asp-action="becomeaprovider">
                            <div class="row mb-3">
                                <div class="col-md-11 ms-3 mb-0 alert alert-success alert-dismissible fade @(TempData["msg"]==null?"d-none":"show")" role="alert">
                                    @TempData["msg"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <input type="text" id="txtFirstName" asp-for="firstname" maxlength="100" autocomplete="off" class="form-control inputtext ff text-capitalize" placeholder="First name">
                                    <span asp-validation-for="firstname" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <input type="text" id="txtLastName" asp-for="lastname" maxlength="100" autocomplete="off" class="form-control inputtext ff text-capitalize" placeholder="Last name">
                                    <span asp-validation-for="lastname" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <input type="email" id="txtEmail" asp-for="email" maxlength="100" autocomplete="off" class="form-control inputtext ff" placeholder="Email Address">
                                    <span asp-validation-for="email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <div class="input-group-text ff">+46</div>
                                        <input asp-for="mobile" id="txtPhoneNumber" class="form-control inputtext ff" placeholder="Phone Number" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" type="number" maxlength="10" autocomplete="off" onkeyup="checkForCustomerSignup();" onkeypress="return event.charCode &gt;= 48 &amp;&amp; event.charCode &lt;= 57" />
                                    </div>
                                    <span asp-validation-for="mobile" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-12">                                    
                                    <input type="password" id="pwd" asp-for="password" maxlength="100" autocomplete="off" class="form-control inputtext ff" placeholder="Password">
                                    <span asp-validation-for="password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <input type="password" id="confirmpwd" asp-for="confirmpassword" maxlength="100" autocomplete="off" class="form-control inputtext ff" placeholder="Confirm Password">
                                    <span asp-validation-for="confirmpassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="cbSendNewsletter">
                                        <label class="form-check-label ff" for="cbSendNewsletter">
                                            Send me newsletters from Helperland
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="col-md-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="cbTC&PV">
                                        <label class="form-check-label ff" for="cbTC&PV">
                                            I accept <a asp-action="" asp-controller="" class="tc-pv">terms and conditions</a> & <a asp-action="" asp-controller="" class="tc-pv">privacy policy</a>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-12 text-center">
                                    <button type="submit" form="frmRegProvider" class="btnRegPro text-center ff pt-2 pe-4 pb-2 ps-4">Get Started&nbsp;&nbsp;<img src="~/images/becomepro/right-arr.png"></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-5">
            <a href="#footer" class="bottomnav"><i class="fal fa-arrow-down"></i></a>
        </div>
    </section>
    <div class="container-fluid howitworks-container mt-5">
        <img src="~/images/home/blog-left-bg.png" class="img-fluid left blog-left-bg">
        <div class="title mb-5 ff">How it works</div>
        <div class="howitworks-inner-container my-2">
            <div class="dv-howitworks-left">
                <div>
                    <div class="howitworks-subtitle ff">Register yourself</div>
                    <p class="howitworks-detail ff">Provide your basic information to register yourself as a service provider.</p>
                    <p class="howitworks-readPost ff">Read more <span class="arr">&rarr;</span></p>
                </div>
            </div>
            <div class="dv-howitworks-right">
                <img src="~/images/becomepro/regyourself.png" class="howitworks-img img-fluid">
            </div>
        </div>
        <div class="howitworks-inner-container my-2">
            <div class="dv-howitworks-left">
                <img src="~/images/becomepro/getserreq.png" class="howitworks-img img-fluid">
            </div>
            <div class="dv-howitworks-right">
                <div>
                    <div class="howitworks-subtitle ff">Get service requests</div>
                    <p class="howitworks-detail ff">You will get service requests from customes depend on service area and profile.</p>
                    <p class="howitworks-readPost ff">Read more <span class="arr">&rarr;</span></p>
                </div>
            </div>
        </div>
        <div class="howitworks-inner-container my-2">
            <div class="dv-howitworks-left">
                <div>
                    <div class="howitworks-subtitle ff">Complete service</div>
                    <p class="howitworks-detail ff">Accept service requests from your customers and complete your work.</p>
                    <p class="howitworks-readPost ff">Read more <span class="arr">&rarr;</span></p>
                </div>
            </div>
            <div class="dv-howitworks-right">
                <img src="~/images/becomepro/completeser.png" class="howitworks-img img-fluid">
            </div>
        </div>
        <div class="container-fluid pt-5 pb-3">
            <div class="row">
                <div class="col-md-12 text-center">
                    <p class="newsletter">GET OUR NEWSLETTER</p>
                    <div>
                        <input type="text" class="form-control-sm rounded-pill textbox" placeholder="YOUR EMAIL">
                        <input type="submit" class="btn rounded-pill submit" value="Submit">
                    </div>
                </div>
            </div>
        </div>
        <img src="~/images/home/blog-right-bg.png" class="img-fluid right blog-right-bg">
    </div>

    <partial name="_FooterLayout" />
    <partial name="_LoginForgotPasswordModalLayout" />

    <!-- script -->
    <script src="~/js/home.js"></script>
    <!-- script for sidebar navigation -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <partial name="_SidebarNavigationLayout" />
</body>
</html>